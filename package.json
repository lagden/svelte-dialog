{
  "name": "@tadashi/svelte-dialog",
  "version": "4.1.0",
  "description": "Svelte component",
  "author": "Thiago Lagden",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lagden/svelte-dialog/issues"
  },
  "homepage": "https://github.com/lagden/svelte-dialog#readme",
  "engines": {
    "node": ">=14.17.0"
  },
  "keywords": [
    "svelte",
    "dialog",
    "modal",
    "component"
  ],
  "files": [
    "src",
    "dist",
    "README.md"
  ],
  "type": "module",
  "svelte": "src/dialog.js",
  "main": "src/dialog.js",
  "exports": {
    ".": "./dist/dialog.jd"
  },
  "scripts": {
    "eslint": "prettier --check --plugin prettier-plugin-svelte . && eslint --ignore-path .gitignore .",
    "format": "prettier --write --plugin prettier-plugin-svelte .",
    "rm": "rm -rf dist",
    "esbuild": "node ./esbuild.config.js",
    "build": "run-s test rm esbuild",
    "prepublishOnly": "npm run build",
    "pretest": "npm run eslint",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest test --coverage --coverageReporters=lcov --coverageReporters=text",
    "test:watch": "npm test -- --watch"
  },
  "devDependencies": {
    "@testing-library/svelte": "4.0.5",
    "esbuild": "0.19.11",
    "esbuild-svelte": "0.8.0",
    "eslint": "8.56.0",
    "eslint-plugin-svelte": "2.35.1",
    "eslint-plugin-unicorn": "50.0.1",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "npm-run-all": "4.1.5",
    "prettier-plugin-svelte": "3.1.2",
    "prettier": "3.1.1",
    "svelte": "4.2.8",
    "svelte-jester": "3.0.0",
    "timekeeper": "2.3.1"
  }
}
