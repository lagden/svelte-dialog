{
  "name": "@tadashi/svelte-dialog",
  "version": "1.2.0",
  "description": "Svelte component",
  "author": "Thiago Lagden",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lagden/svelte-dialog/issues"
  },
  "homepage": "https://github.com/lagden/svelte-dialog#readme",
  "engines": {
    "node": ">=10.0.0"
  },
  "keywords": [
    "svelte",
    "dialog",
    "modal",
    "component"
  ],
  "files": [
    "src",
    "dist",
    "README.md"
  ],
  "type": "module",
  "svelte": "src/dialog.js",
  "main": "src/dialog.js",
  "scripts": {
    "eslint": "eslint --config .eslintrc.cjs --ext .js --ignore-path .gitignore .",
    "rm": "rm -rf dist",
    "rollup": "rollup -c",
    "build": "run-s test rm rollup",
    "prepublishOnly": "npm run build",
    "pretest": "npm run eslint",
    "test": "jest test --coverage --coverageReporters=lcov --coverageReporters=text",
    "test:watch": "npm test -- --watch"
  },
  "devDependencies": {
    "@babel/core": "7.14.6",
    "@babel/eslint-parser": "7.14.7",
    "@babel/plugin-syntax-top-level-await": "7.14.5",
    "@babel/preset-env": "7.14.7",
    "@rollup/plugin-node-resolve": "13.0.2",
    "@testing-library/svelte": "3.0.3",
    "babel-jest": "27.0.6",
    "eslint": "7.31.0",
    "eslint-config-xo": "0.37.0",
    "eslint-plugin-html": "6.1.2",
    "eslint-plugin-svelte3": "3.2.0",
    "eslint-plugin-unicorn": "34.0.1",
    "jest": "27.0.6",
    "npm-run-all": "4.1.5",
    "prettier": "2.3.2",
    "rollup": "2.53.2",
    "rollup-plugin-svelte": "7.1.0",
    "svelte": "3.38.3",
    "svelte-jester": "1.7.0"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-syntax-top-level-await"
    ]
  }
}
