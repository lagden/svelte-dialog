{
  "name": "@tadashi/svelte-dialog",
  "version": "4.0.1",
  "description": "Svelte component",
  "author": "Thiago Lagden",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lagden/svelte-dialog/issues"
  },
  "homepage": "https://github.com/lagden/svelte-dialog#readme",
  "engines": {
    "node": ">=14.17.0"
  },
  "keywords": [
    "svelte",
    "dialog",
    "modal",
    "component"
  ],
  "files": [
    "src",
    "dist",
    "README.md"
  ],
  "type": "module",
  "svelte": "src/dialog.js",
  "main": "src/dialog.js",
  "scripts": {
    "prettier": "prettier -c --plugin-search-dir=. ./src/**/*.{svelte,js}",
    "format": "prettier --write --plugin-search-dir=. ./src/**/*.{svelte,js}",
    "eslint": "eslint --config .eslintrc.cjs --ext .js --ignore-path .gitignore .",
    "rm": "rm -rf dist",
    "esbuild": "node ./esbuild.config.js",
    "build": "run-s test rm esbuild",
    "prepublishOnly": "npm run build",
    "pretest": "npm run eslint",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest test --coverage --coverageReporters=lcov --coverageReporters=text",
    "test:watch": "npm test -- --watch"
  },
  "devDependencies": {
    "@testing-library/svelte": "3.2.2",
    "esbuild": "0.17.18",
    "esbuild-svelte": "0.7.3",
    "eslint": "8.40.0",
    "eslint-config-xo": "0.43.1",
    "eslint-plugin-svelte3": "4.0.0",
    "eslint-plugin-unicorn": "47.0.0",
    "jest": "29.5.0",
    "jest-environment-jsdom": "29.5.0",
    "npm-run-all": "4.1.5",
    "prettier-plugin-svelte": "2.10.0",
    "prettier": "2.8.8",
    "svelte": "3.59.0",
    "svelte-jester": "2.3.2",
    "timekeeper": "2.2.0"
  }
}
