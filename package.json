{
  "name": "@tadashi/svelte-dialog",
  "version": "2.0.1",
  "description": "Svelte component",
  "author": "Thiago Lagden",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lagden/svelte-dialog/issues"
  },
  "homepage": "https://github.com/lagden/svelte-dialog#readme",
  "engines": {
    "node": ">=14.17.0"
  },
  "keywords": [
    "svelte",
    "dialog",
    "modal",
    "component"
  ],
  "files": [
    "src",
    "dist",
    "README.md"
  ],
  "type": "module",
  "svelte": "src/dialog.js",
  "main": "src/dialog.js",
  "scripts": {
    "prettier": "prettier -c --plugin-search-dir=. ./src/**/*.{svelte,js}",
    "format": "prettier --write --plugin-search-dir=. ./src/**/*.{svelte,js}",
    "eslint": "eslint --config .eslintrc.cjs --ext .js --ignore-path .gitignore .",
    "rm": "rm -rf dist",
    "esbuild": "node ./esbuild.config.js",
    "build": "run-s test rm esbuild",
    "prepublishOnly": "npm run build",
    "pretest": "npm run eslint",
    "test": "jest test --coverage --coverageReporters=lcov --coverageReporters=text",
    "test:watch": "npm test -- --watch"
  },
  "devDependencies": {
    "@babel/core": "7.17.8",
    "@babel/eslint-parser": "7.17.0",
    "@babel/preset-env": "7.16.11",
    "@testing-library/svelte": "3.1.0",
    "babel-jest": "27.5.1",
    "esbuild": "0.14.27",
    "esbuild-svelte": "0.6.3",
    "eslint": "8.11.0",
    "eslint-config-xo": "0.40.0",
    "eslint-plugin-html": "6.2.0",
    "eslint-plugin-svelte3": "3.4.1",
    "eslint-plugin-unicorn": "41.0.1",
    "jest": "27.5.1",
    "npm-run-all": "4.1.5",
    "prettier-plugin-svelte": "2.6.0",
    "prettier": "2.6.0",
    "svelte": "3.46.4",
    "svelte-jester": "2.3.2",
    "timekeeper": "2.2.0"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  }
}
