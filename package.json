{
  "name": "@tadashi/svelte-dialog",
  "version": "1.3.0",
  "description": "Svelte component",
  "author": "Thiago Lagden",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lagden/svelte-dialog/issues"
  },
  "homepage": "https://github.com/lagden/svelte-dialog#readme",
  "engines": {
    "node": ">=14.17.0"
  },
  "keywords": [
    "svelte",
    "dialog",
    "modal",
    "component"
  ],
  "files": [
    "src",
    "dist",
    "README.md"
  ],
  "type": "module",
  "svelte": "src/dialog.js",
  "main": "dist/dialog.js",
  "scripts": {
    "prettier": "prettier -c --plugin-search-dir=. ./src/**/*.{svelte,js}",
    "format": "prettier --write --plugin-search-dir=. ./src/**/*.{svelte,js}",
    "eslint": "eslint --config .eslintrc.cjs --ext .js --ignore-path .gitignore .",
    "rm": "rm -rf dist",
    "esbuild": "./esbuild.config.js",
    "build": "run-s test rm esbuild",
    "prepublishOnly": "npm run build",
    "pretest": "npm run eslint",
    "test": "jest test --coverage --coverageReporters=lcov --coverageReporters=text",
    "test:watch": "npm test -- --watch"
  },
  "devDependencies": {
    "@babel/core": "7.16.7",
    "@babel/eslint-parser": "7.16.5",
    "@babel/preset-env": "7.16.7",
    "@testing-library/svelte": "3.0.3",
    "babel-jest": "27.4.6",
    "esbuild": "0.14.10",
    "esbuild-svelte": "0.6.1",
    "eslint": "8.6.0",
    "eslint-config-xo": "0.39.0",
    "eslint-plugin-html": "6.2.0",
    "eslint-plugin-svelte3": "3.3.0",
    "eslint-plugin-unicorn": "40.0.0",
    "jest": "27.4.7",
    "npm-run-all": "4.1.5",
    "prettier-plugin-svelte": "2.5.1",
    "prettier": "2.5.1",
    "svelte": "3.45.0",
    "svelte-jester": "2.1.5"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  }
}
